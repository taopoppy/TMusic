/**index.wxss**/
.home-view {
  background: #daf8ff;
}

.playlist-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-top: 10rpx;
  flex-direction: row;
}

.top-view {
  display: flex;
  align-items: center;
  flex-direction: row;
  height: 85rpx;
  width: 100%;
  margin-bottom: 10rpx;
  padding-left: 10rpx;
}

.user-icon-view {
  width: 60rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}

.user-icon {
  color:#fff;
  font-size: 60rpx;
}

.top-search-icon-view {
  height: 60rpx;
  width: 60rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.search-icon {
  font-size: 60rpx;
  color: #9fa3a5;
}
.top-view-seach {
  width: 600rpx;
  height: 60rpx;
  margin-left: 20rpx;
  border-radius: 30rpx;
  background: #fff;
  padding-left: 5rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 40rpx!important;
}

.hot-search-swiper {
  width: 500rpx;
  height: 40rpx;
  font-size: 35px;
  color: #9fa3a5;
  font-size:30rpx;
}

.hot-search-text {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size:30rpx;
}